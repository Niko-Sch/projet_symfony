{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

{# Setting des variables #}
{% set last_username = last_username|default('') %}
{% set login_error = login_error|default(null) %}
{% set display = "mb-3" %}
{% set isDisabled = "" %}
{% set isReadOnly = false %}

{# Arrive sur la page de co, user non co #}
{% if not app.user %}
    <div class="form-container">
    <h1>Connexion</h1>
    {# Formulaire connexion #}
    <form method="post" action="{{ path('app_login') }}">
        <div class="mb-3">
            <label for="inputEmail" class="mb-3">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="mb-3">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {% if login_error %}
            <div class="alert alert-danger">
                {{ login_error.messageKey|trans(login_error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary w-50">Connexion</button>
        </div>
    </form>
    </div>
{% endif %}

{# Le user se co #}
{% if app.user and 'ROLE_USER' in app.user.roles and ticketForm is defined %}

    {# Variables #}
    {% set can = {
        all:   false,
        desc:  true,
        cat:   true,
        status:false
    } %}

    <div class="form-container">
        <h1>Créer un ticket {{ app.user.roles[0] }}</h1>

        {{ form_start(ticketForm, {'attr': {'class': 'needs-validation'}}) }}

        {{ form_row(ticketForm.tick_auteur, {
            'attr': {'class': 'form-control', 'value': app.user.email, 'readonly': true}
        }) }}

        {{ form_row(ticketForm.tick_date_ouv, {
            'attr': {'class': 'form-control', 'readonly': true}
        }) }}

        {{ form_row(ticketForm.tick_description, {
            'attr': {'class': 'form-control', 'readonly': not can.desc},
            'disabled': not can.desc
        }) }}

        {{ form_row(ticketForm.tick_categorie, {
            'attr': {'class': 'form-control'},
            'disabled': not can.cat
        }) }}

        {{ form_row(ticketForm.tick_status, {
            'attr': {'class': 'form-control'},
            'disabled': not can.status
        }) }}

        {{ form_row(ticketForm.tick_responsable, {
            'attr': {'class': 'form-control', 'readonly': not can.all},
            'disabled': not can.all
        }) }}

        {{ form_row(ticketForm.tick_date_clo, {
            'attr': {'class': 'form-control', 'readonly': not can.all},
            'disabled': not can.all
        }) }}

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-block">Envoyer</button>
        </div>

        {{ form_end(ticketForm) }}
    </div>

    <form action="{{ path('app_logout') }}" method="post" class="mb-2">
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger w-25">Déconnexion</button>
        </div>
    </form>
{% endif %}

{% endblock %}
